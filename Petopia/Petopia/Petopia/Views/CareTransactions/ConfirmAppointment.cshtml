                <h2> @ViewBag.Title </h2>

                <!-- =============================== FIRST\TOP ROW! ==================-->
                <div class="row make_appt_box" style="margin-top:15px;">

                    <!--======================= FIRST ROW -- ZEROth COLUMN ===========-->
