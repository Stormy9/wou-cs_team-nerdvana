                        <!----------------------- CONFIRM PET CARE APPOINTMENT!  ------>
                        <div class="form-group" style="padding-top: 18px;">

                            <span style="margin-right: 5px; margin-bottom: 5px;">
                                <input type="submit" value="Confirm Appointment!"
                                       class="btn our_buttons" , tabindex="7"
                                       style="float: right; margin-bottom: 5px;" />
                            </span>

                            <!-- FIGURE OUT THE 'DECLINE' THING HERE!!! -->
                            <span style="float: right; margin-right: 5px; margin-bottom: 5px;"
                                  class="btn our_buttons">
                                @Html.ActionLink("Decline Appointment", "Delete",
                                          new { Controller = "CareTransactions", 
                                                id = thisApptID },
